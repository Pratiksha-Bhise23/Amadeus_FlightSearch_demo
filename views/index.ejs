<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flight Search using amdeous api</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #f4f4f4;
      }
      .card {
        border-radius: 10px;
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Flight Search</h2>
      <form action="/search" method="POST" class="card">
        <div class="row g-3">
          <div class="col-md-4">
            <label>From</label>
            <input
              type="text"
              name="from"
              class="form-control"
              value="<%= from %>"
              required
            />
          </div>
          <div class="col-md-4">
            <label>To</label>
            <input
              type="text"
              name="to"
              class="form-control"
              value="<%= to %>"
              required
            />
          </div>
          <div class="col-md-4">
            <label>Date</label>
            <input
              type="date"
              name="date"
              class="form-control"
              value="<%= date %>"
              required
            />
          </div>
          <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary mt-3">
              Search Flights
            </button>
          </div>
        </div>
      </form>

      <!-- Display Flights -->
      <% if (flights && flights.length > 0) { %>
      <div class="mt-4">
        <h4>Available Flights (<%= flights.length %> found)</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Airline</th>
              <th>Departure</th>
              <th>Arrival</th>
              <th>Duration</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% flights.forEach(flight => { %>
            <tr>
              <td><%= flight.airline %></td>
              <td><%= flight.departure %></td>
              <td><%= flight.arrival %></td>
              <td><%= flight.duration %></td>
              <td><strong> Rs <%= flight.price %></strong></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </body>
</html>
